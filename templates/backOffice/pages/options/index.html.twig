{% extends 'backOffice/base/base_admin.html.twig' %}

{% block header %}
    {{ include('backOffice/base/parts/header.html.twig',
        {"breadcrumb":[
            [path('_admin_home'), "Accueil"],
            [path('_options_index'), "Options"]
        ]}) }}
{% endblock %}

{% block content %}
    <div class="card-custom">
        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>name</th>
                <th>value</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for o in options.items %}
                <tr>
                    <td>{{ o.name }}</td>
                    <td>{{ serialize(o.value) }}</td>
                    <td class="text-center">
                        <a href="{{ path('_options_edit', {'id': o.id}) }}">
                            <i class="far fa-edit mr-2"></i>
                        </a>
                        <a href="{{ path('_options_delete', {'id': o.id}) }}">
                            <i class="far fa-trash-alt text-danger ml-2"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune option trouv√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="pagination justify-content-center">
        {{ knp_pagination_render(options) }}
    </div>
{% endblock %}