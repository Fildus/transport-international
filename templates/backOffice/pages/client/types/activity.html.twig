{% extends 'backOffice/pages/client/edit.html.twig' %}

{% block title %}{{ c.legalInformation.corporateName ?? 'nouveau' }} - Activités {% endblock %}

{% block header %}
    {{ parent() }}
    {{ include('backOffice/base/parts/header.html.twig',
        {"breadcrumb":[
            [path('_admin_client_index'), "Clients"],
            [ '#' , c.legalInformation.corporateName ?? 'nouveau'],
            [path('_admin_client_edit_about',{"clientId":c.id}), "Activités"]
        ]}) }}
{% endblock %}

{% block form %}
    <h2>Activités</h2>
    {{ form_start(form) }}
    <div class="form-group checkboxCascade">
        {{ render(controller('App\\Controller\\Front\\RenderController::getCheckboxCascade',
            {'entities': activities, 'form': form.children.activity.children})) }}
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-success ">Soumettre</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/script-min.js') }}"></script>
{% endblock %}


